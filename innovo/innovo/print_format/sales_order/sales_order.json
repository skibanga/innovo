 "html": "\r\n   <div class=\"page-container\">\r\n    <!--Letterhead Section -->\r\n    <div class=\"letterhead mb-0\">\r\n        <div class=\"row\">\r\n            <div class=\"col-xs-4\">\r\n                <img src=\"/files/innovo-logo.png\" \r\n                     style=\"max-height: 80px; max-width: 200px;\" alt=\"Company Logo\">\r\n            </div>\r\n            <div class=\"col-xs-8 text-right\">\r\n                <h3 style=\"margin: 0; color: #14216f;\">INNOVO INTERNATIONAL TRADING LTD</h3>\r\n                <p style=\"margin: 5px 0; font-size: 12px;\">\r\n                     Room 201, 2nd Floor Natai Plaza Cocacola Road, Mikocheni Industrial Area,<br>\r\n                    Tanzania Postal Code: 14112 | P.O Box: 7638 Dar es Salaam. <br>\r\n                    <strong>Contact No:</strong> +255 752 294 333<br>\r\n                    <strong>Email:</strong> support@innovo.co.tz<br>\r\n                    <strong>Website:</strong> www.innovo.co.tz\r\n                </p>\r\n            </div>\r\n        </div>\r\n    </div>\r\n    \r\n     <!--Invoice Header -->\r\n    <hr style=\"border: 3px solid #71bc40; margin: 20px 0;\" class=\"m-0\">\r\n\r\n    <div class=\"invoice-header m-0\">\r\n        <center><h3 style=\"color: #14216f\">SALES INVOICE #: {{ doc.name }}</h3></center>\r\n        <div class=\"row\">\r\n            <div class=\"col-xs-8\">\r\n                <h4 style=\"color: #284264;\">Bill To:</h4>\r\n                <p><strong>Customer Name: </strong> {{ doc.customer }}</p>\r\n                {# Fetch customer address #}\r\n                <p><strong>Address: </strong>{{ doc.customer_address }} </p>\r\n                {# Fetch Contact Phone & Email #}\r\n                <p><strong>Phone:</strong> {{ doc.customer_phone }}</p>\r\n                <p><strong>Email:</strong> {{ doc.customer_email }} </p>\r\n            </div>\r\n            \r\n            <div class=\"col-xs-4\" style=\"text-align: right; margin-left: auto;\">\r\n                <p><strong>Date:</strong> {{ frappe.utils.formatdate(doc.date) }}</p>\r\n                <p><strong>TIN No:</strong> {{ doc.tin }}</p>\r\n                <p><strong>VRN No:</strong> {{ doc.vrn }}</p>\r\n            </div>\r\n\r\n        </div>\r\n    </div>\r\n\r\n        \r\n\r\n    <!--Invoice Items Table -->\r\n    <div class=\"invoice-items m-0\">\r\n        <table class=\"table table-bordered table-condensed\">\r\n        <thead class=\"table-header\">\r\n            <tr>\r\n                <th style=\"width: 5%; text-align: center;\">#</th>\r\n                <th style=\"width: 15%; text-align: center;\">Item Code</th>\r\n                <th style=\"width: 30%; text-align: left;\">Item Name</th>\r\n                <th style=\"width: 8%; text-align: center;\">Quantity</th>\r\n                <th style=\"width: 20%; text-align: right;\">Rate</th>\r\n                <th style=\"width: 22%; text-align: right;\">Amount</th>\r\n            </tr>\r\n        </thead>\r\n        <tbody>\r\n            {% for row in doc.product %}\r\n            <tr>\r\n                <td style=\"text-align: center;\">{{ row.idx }}</td>\r\n                <td style=\"text-align: center;\">{{ row.item_code }}</td>\r\n                <td>{{ row.item_name }}</td>\r\n                <td style=\"text-align: center;\">{{ row.quantity }}</td>\r\n                <td style=\"text-align: right;\">{{ row.get_formatted(\"rate\", doc) }}</td>\r\n                <td style=\"text-align: right;\">{{ row.get_formatted(\"amount\", doc) }}</td>\r\n            </tr>\r\n            {% endfor %}\r\n        \r\n          \r\n        </tbody>\r\n        </table>\r\n        \r\n        </table>\r\n\r\n<!-- Summary Box -->\r\n<div class=\"row\" style=\"margin-top: 20px;\">\r\n    <div class=\"col-xs-6\">\r\n        <div style=\"border: 1px solid #ddd; padding: 10px; background-color: #f8f9fa;\">\r\n            <p style=\"margin: 0;\"><strong>Total Quantity:</strong> {{ doc.total_quantity }}</p>\r\n        </div>\r\n    </div>\r\n    \r\n    <div class=\"col-xs-6\">\r\n        <div style=\"border: 1px solid #ddd; padding: 10px; background-color: #ffffff; text-align: right;\">\r\n            <p style=\"margin: 0;\"><strong>Sub Total:</strong> {{ doc.get_formatted(\"total_amount\") }} {{ doc.currency }}</p>\r\n        </div>\r\n        <div style=\"border: 1px solid #ddd; padding: 10px; background-color: #ffffff; text-align: right;\">\r\n            <p style=\"margin: 0;\"><strong>VAT Amount (18%):</strong> {{ doc.get_formatted(\"vat_amount\") }} {{ doc.currency }}</p>\r\n        </div>\r\n        <div style=\"border: 1px solid #ddd; padding: 10px; background-color: #ffffff; text-align: right;\">\r\n            <p style=\"margin: 0;\"><strong>Total Amount:</strong> {{ doc.get_formatted(\"total\") }} {{ doc.currency }}</p>\r\n        </div>\r\n    </div>\r\n</div>\r\n    </div>\r\n\r\n{# ================= NEW SECTION: PRODUCT DESCRIPTION ================= #}\r\n{% set first = (doc.product[0] if doc.product and (doc.product|len) > 0 else None) %}\r\n<div class=\"spec-section\" style=\"margin-bottom: 40px;\"> <!-- Added margin-bottom -->\r\n    <h4 style=\"color:#284264; margin-top:10px;\"> Product Description </h4>\r\n    <div class=\"row\">\r\n        <div class=\"col-xs-6\">\r\n            <p><strong>Origin:</strong>\r\n                {{ doc.origin }}\r\n            </p>\r\n            <p><strong>Color:</strong>\r\n                {{ doc.color }}\r\n            </p>\r\n            <p><strong>Particle Size:</strong>\r\n                {{ doc.particle_size }}\r\n            </p>\r\n            <p><strong>Ash:</strong>\r\n                {{ doc.ash }}\r\n            </p>\r\n        </div>\r\n        <div class=\"col-xs-6\">\r\n            <p><strong>Extraneous Matter:</strong>\r\n                {{ doc.extraneous_matter }}\r\n            </p>\r\n            <p><strong>Acid Insoluble Ash:</strong>\r\n                {{ doc.acid_insoluble_ash }}\r\n            </p>\r\n            <p><strong>Moisture:</strong>\r\n                {{ doc.moisture }}\r\n            </p>\r\n            <p><strong>Volatile Oil:</strong>\r\n                {{ doc.volatile_oil }}\r\n            </p>\r\n        </div>\r\n    </div>\r\n\r\n    <div class=\"notes-box\">\r\n        <p style=\"margin:30;\"><h4 style=\"color: #284264;\">Additional description</h4></p>\r\n          \r\n        <div class=\"notes-content\">\r\n            {{ doc.notes or doc.description or (first and first.description) or \"-\" }}\r\n        </div>\r\n    </div>\r\n</div>\r\n{# ================= END NEW SECTION ================= #} \r\n    <!--Payment Details  Section -->\r\n<div class=\"payment-details-m-0\" style=\"margin-bottom:20px\">\r\n    <div class=\"row\">\r\n        <div class=\"col-xs-12\">\r\n            <h4 style=\"color: #284264;\">Payment Details</h4>\r\n            <div class=\"row\">\r\n                <div class=\"col-xs-8\">\r\n                    <p><strong>Account Number:</strong> {{ doc.account_number}}</p>\r\n                    <p><strong>Account Name:</strong> {{ doc.account_name}}</p>\r\n                    <p><strong>Bank Name:</strong> {{ doc.bank_name}}</p>\r\n                    <p><strong>Account Currency:</strong> {{ doc.currency}}</p>\r\n                    <p><strong>Swiftcode:</strong> {{ doc.swiftcode }}</p>\r\n                </div>\r\n                <div class=\"col-xs-4\">\r\n                    <p><strong>Validity of Invoice:</strong> {{ doc.validity_of_invoice }}</p>\r\n                    <p><strong>Prepared By:</strong> {{ doc.prepared_by }}</p>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n\r\n    <!-- Footer -->\r\n   \r\n    <div class=\"invoice-footer\">\r\n         <hr style=\"border: 3px solid #71bc40; margin: 20px 0;\" class=\"m-0\">\r\n        Thank you for doing business with us!<br>\r\n    </div>\r\n</div>\r\n\r\n<!--Custom CSS -->\r\n<style>\r\n    html, body {\r\n        height: 100%;\r\n        margin: 0;\r\n        padding: 0;\r\n    }\r\n    \r\n    .page-container {\r\n        min-height: 90vh;\r\n        display: flex;\r\n        flex-direction: column;\r\n        font-family: \"Helvetica Neue\", Helvetica, Arial, sans-serif;\r\n        font-size: 13px;\r\n        line-height: 1.4;\r\n    }\r\n    \r\n    .print-format {\r\n        font-family: \"Helvetica Neue\", Helvetica, Arial, sans-serif;\r\n        font-size: 13px;\r\n        line-height: 1.4;\r\n    }\r\n    \r\n    .letterhead {\r\n        margin-bottom: 30px;\r\n    }\r\n    \r\n    .invoice-items {\r\n        flex: 1;\r\n    }\r\n    \r\n    .table {\r\n        width: 100%;\r\n        margin-bottom: 20px;\r\n    }\r\n    \r\n    .table th,\r\n    .table td {\r\n        padding: 8px;\r\n        vertical-align: top;\r\n        border-top: 1px solid #ddd;\r\n    }\r\n    \r\n    .table thead th {\r\n        font-weight: bold;\r\n        vertical-align: bottom;\r\n        border-bottom: 2px solid #ddd;\r\n    }\r\n    \r\n    .table-bordered {\r\n        border: 1px solid #ddd;\r\n    }\r\n    \r\n    .table-bordered th,\r\n    .table-bordered td {\r\n        border: 1px solid #ddd;\r\n    }\r\n    \r\n    .table-condensed th,\r\n    .table-condensed td {\r\n        padding: 5px;\r\n    }\r\n    \r\n    /* Screen display - with blue background */\r\n    .table-header {\r\n        background-color: #284264;\r\n        color: white;\r\n    }\r\n    \r\n    .table-header th {\r\n        color: white !important;\r\n    }\r\n    \r\n    /* Ensure text doesn't wrap in table cells */\r\n    .table td {\r\n        white-space: nowrap;\r\n    }\r\n    \r\n    /* Allow item name to wrap if needed */\r\n    .table td:nth-child(3) {\r\n        white-space: normal;\r\n    }\r\n    \r\n    .invoice-footer {\r\n        text-align: center;\r\n        border-top: 1px solid #ccc;\r\n        padding: 10px;\r\n        font-size: 11px;\r\n        color: #7f8c8d;\r\n        margin-top: auto;\r\n    }\r\n    \r\n    @media print {\r\n        @page {\r\n            margin: 20mm 10mm 30mm 10mm;\r\n        }\r\n        \r\n        .page-container {\r\n            min-height: auto;\r\n        }\r\n        \r\n        .letterhead {\r\n            border-bottom: 3px solid #3498db !important;\r\n        }\r\n        \r\n        /* Print-specific table header styling - forces background colors */\r\n        .table-header {\r\n            background-color: #3498db !important;\r\n            color: white !important;\r\n            -webkit-print-color-adjust: exact !important;\r\n            color-adjust: exact !important;\r\n        }\r\n        \r\n        .table-header th {\r\n            background-color: #3498db !important;\r\n            color: white !important;\r\n            -webkit-print-color-adjust: exact !important;\r\n            color-adjust: exact !important;\r\n            font-weight: bold !important;\r\n            border: 2px solid #000 !important;\r\n        }\r\n        \r\n        /* Alternative styling if background colors still don't print */\r\n        .table-header-alt th {\r\n            border: 3px solid #000 !important;\r\n            font-weight: bold !important;\r\n            text-decoration: underline !important;\r\n            font-size: 14px !important;\r\n        }\r\n        \r\n        .invoice-footer {\r\n            position: fixed;\r\n            bottom: 0;\r\n            width: 100%;\r\n            border-top: 1px solid #ccc;\r\n            padding-top: 10px;\r\n            background: white;\r\n            margin-top: 0;\r\n        }\r\n        \r\n        /* Print-specific table styling */\r\n        .table-bordered th,\r\n        .table-bordered td {\r\n            border: 1px solid #000 !important;\r\n        }\r\n    }\r\n</style>",
