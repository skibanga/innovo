 "font_size": 14,
 "html": "<!-- INNOVO \u2014 Consulting Invoice Print (New Look)\r\n     Tailored from the EMM MAZAO sample invoice to a clean, print\u2011perfect layout.\r\n     Works in ERPNext/Frappe print formats (Jinja + HTML/CSS).\r\n-->\r\n<div class=\"page-wrap\">\r\n  <!-- Letterhead -->\r\n  <header class=\"brandbar\">\r\n    <div class=\"brandbar__left\">\r\n      <img src=\"/files/innovo-logo.png\" alt=\"Company Logo\" class=\"logo\"/>\r\n    </div>\r\n    <div class=\"brandbar__right\">\r\n      <h2 class=\"brand\">INNOVO INTERNATIONAL TRADING LTD</h2>\r\n      <p class=\"meta\">\r\n        Room 201, 2nd Floor, Natai Plaza, Coca\u2011Cola Road, Mikocheni Industrial Area, Dar es Salaam<br/>\r\n        Tanzania Postal Code: 14112 \u00b7 P.O. Box 7638 Dar es Salaam<br/>\r\n        <strong>Contact:</strong> +255 752 294 333 \u00b7 <strong>Email:</strong> support@innovo.co.tz \u00b7 <strong>Web:</strong> www.innovo.co.tz\r\n      </p>\r\n    </div>\r\n  </header>\r\n\r\n  <!-- Title + Invoice meta -->\r\n  <section class=\"title-row\">\r\n    <div class=\"title\">\r\n      <h1>CONSULTING INVOICE</h1>\r\n      <div class=\"tag\"># {{ doc.name }}</div>\r\n    </div>\r\n    <table class=\"kv compact\">\r\n      <tr>\r\n        <th>Date</th>\r\n        <td>{{ frappe.utils.formatdate(doc.posting_date or doc.date) }}</td>\r\n      </tr>\r\n      <tr>\r\n        <th>Currency</th>\r\n        <td>{{ doc.currency or \"USD\" }}</td>\r\n      </tr>\r\n      <tr>\r\n        <th>TIN</th>\r\n        <td>{{ doc.tin or '-' }}</td>\r\n      </tr>\r\n      <tr>\r\n        <th>VRN</th>\r\n        <td>{{ doc.vrn or '-' }}</td>\r\n      </tr>\r\n    </table>\r\n  </section>\r\n\r\n  <!-- Party blocks -->\r\n  <section class=\"parties\">\r\n    <div class=\"party\">\r\n      <h3>Bill To</h3>\r\n      <p>\r\n        <strong>{{ doc.customer or doc.company_name or '-' }}</strong><br/>\r\n        {{ doc.customer_address or '-' }}<br/>\r\n        <span class=\"muted\">Phone:</span> {{ doc.customer_phone or doc.contact_phone or '-' }} \u00b7\r\n        <span class=\"muted\">Email:</span> {{ doc.customer_email or doc.contact_email or '-' }}\r\n      </p>\r\n    </div>\r\n    <div class=\"party\">\r\n      <h3>Project / Work</h3>\r\n      <p>\r\n        {{ doc.project or doc.project_work or doc.work_title or 'Import Consulting' }}<br/>\r\n        <span class=\"muted\">Contact Person:</span> {{ doc.contact_name or doc.contact_display or '-' }}<br/>\r\n        <span class=\"muted\">Contact No:</span> {{ doc.contact_number or doc.customer_phone or '-' }}\r\n      </p>\r\n    </div>\r\n  </section>\r\n\r\n  <!-- Services table -->\r\n  {% set rows = (doc.items if doc.items else (doc.product if doc.product else [])) %}\r\n  <section class=\"items\">\r\n    <table class=\"table table-bordered\">\r\n      <thead>\r\n        <tr>\r\n          <th class=\"w-5 ta-c\">#</th>\r\n          <th class=\"w-50 ta-l\">Description of Service</th>\r\n          <th class=\"w-10 ta-c\">Qty</th>\r\n          <th class=\"w-15 ta-r\">Unit Price</th>\r\n          <th class=\"w-20 ta-r\">Sub Total</th>\r\n        </tr>\r\n      </thead>\r\n      <tbody>\r\n        {% if rows and rows|len %}\r\n          {% for row in rows %}\r\n          <tr>\r\n            <td class=\"ta-c\">{{ row.idx or loop.index }}</td>\r\n            <td class=\"ta-l\">\r\n              {{ row.description or row.item_name or '-' }}\r\n              {% if row.item_code %}<div class=\"code\">Code: {{ row.item_code }}</div>{% endif %}\r\n            </td>\r\n            <td class=\"ta-c\">{{ row.qty or row.quantity or 1 }}</td>\r\n            <td class=\"ta-r\">{{ (row.get_formatted(\"rate\", doc) if row.get_formatted else row.rate) or '-' }}</td>\r\n            <td class=\"ta-r\">{{ (row.get_formatted(\"amount\", doc) if row.get_formatted else row.amount) or '-' }}</td>\r\n          </tr>\r\n          {% endfor %}\r\n        {% else %}\r\n          <!-- Fallback for single-line consulting invoices -->\r\n          <tr>\r\n            <td class=\"ta-c\">1</td>\r\n            <td class=\"ta-l\">{{ doc.service_description or doc.remarks or \"Commission Payment as Import Consulting Fee for three businesses done\" }}</td>\r\n            <td class=\"ta-c\">{{ doc.total_qty or 1 }}</td>\r\n            <td class=\"ta-r\">{{ doc.get_formatted(\"base_net_total\") or doc.get_formatted(\"total\") or doc.unit_price or '-' }}</td>\r\n            <td class=\"ta-r\">{{ doc.get_formatted(\"total\") or doc.get_formatted(\"grand_total\") or '-' }}</td>\r\n          </tr>\r\n        {% endif %}\r\n      </tbody>\r\n    </table>\r\n  </section>\r\n\r\n  <!-- Totals -->\r\n  <section class=\"totals\">\r\n    <div class=\"amounts\">\r\n      <table class=\"kv right compact\">\r\n        <tr>\r\n          <th>Sub Total</th>\r\n          <td>{{ doc.get_formatted('total') or doc.get_formatted('net_total') or '-' }}</td>\r\n        </tr>\r\n        <tr>\r\n          <th>VAT (18%)</th>\r\n          <td>{{ doc.get_formatted('total_taxes_and_charges') or doc.get_formatted('vat_amount') or '0.00' }}</td>\r\n        </tr>\r\n        <tr class=\"grand\">\r\n          <th>Total Amount</th>\r\n          <td>{{ doc.get_formatted('grand_total') or doc.get_formatted('total') or '-' }} {{ doc.currency or '' }}</td>\r\n        </tr>\r\n      </table>\r\n      <div class=\"inwords\"><strong>In words:</strong> {{ doc.in_words or doc.base_in_words or (doc.currency ~ ' only.') }}</div>\r\n    </div>\r\n  </section>\r\n\r\n  <!-- Notes & Specs (optional) -->\r\n  <section class=\"notes\">\r\n    <h3>Notes</h3>\r\n    <div class=\"box\">{{ doc.notes or doc.remarks or '-' }}</div>\r\n  </section>\r\n\r\n  <!-- Payment Details -->\r\n  <section class=\"payments\">\r\n    <h3>Payment Terms & Bank Details</h3>\r\n    <div class=\"grid-2\">\r\n      <div>\r\n        <p>To be made payable direct to the Company with details below.</p>\r\n        <table class=\"kv compact\">\r\n          <tr><th>Account Name</th><td>{{ doc.account_name or 'INNOVO INTERNATIONAL TRADING LIMITED' }}</td></tr>\r\n          <tr><th>Bank</th><td>{{ doc.bank_name or 'EQUITY BANK' }}</td></tr>\r\n          <tr><th>Branch</th><td>{{ doc.bank_branch or 'MWENGE BRANCH' }}</td></tr>\r\n          <tr><th>Account No.</th><td>{{ doc.account_number or '3007211648603' }}</td></tr>\r\n          <tr><th>SWIFT</th><td>{{ doc.swiftcode or 'EQBLTZTZ' }}</td></tr>\r\n          <tr><th>Currency</th><td>{{ doc.currency or 'USD' }}</td></tr>\r\n        </table>\r\n      </div>\r\n      <div>\r\n        <table class=\"kv compact\">\r\n          <tr><th>Prepared By</th><td>{{ doc.prepared_by or '-' }}</td></tr>\r\n          <tr><th>Approved By</th><td>{{ doc.approved_by or doc.contact_name or '-' }}</td></tr>\r\n          <tr><th>Validity</th><td>{{ doc.validity_of_invoice or '-' }}</td></tr>\r\n        </table>\r\n        <div class=\"signatures\">\r\n          <div class=\"sig\">\r\n            <div class=\"line\"></div>\r\n            <div class=\"label\">For: {{ doc.company or 'INNOVO INTERNATIONAL TRADING LTD' }}</div>\r\n          </div>\r\n          <div class=\"sig\">\r\n            <div class=\"line\"></div>\r\n            <div class=\"label\">Client Representative</div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </section>\r\n\r\n  <footer class=\"footer\">\r\n    Thank you for your business.\r\n  </footer>\r\n</div>\r\n\r\n<style>\r\n  /* --- Base --- */\r\n  :root{\r\n    --ink:#14216f;      /* Innovo deep blue */\r\n    --accent:#71bc40;   /* green */\r\n    --muted:#6b7280;    /* gray-500 */\r\n    --line:#d9dde3;     /* border */\r\n  }\r\n  html,body{margin:0;padding:0;font-family:\"Helvetica Neue\",Arial,Helvetica,sans-serif;font-size:12.5px;line-height:1.45;color:#111;}\r\n  .page-wrap{min-height:100vh;display:flex;flex-direction:column}\r\n\r\n  /* --- Header --- */\r\n  .brandbar{display:flex;gap:16px;border-bottom:4px solid var(--accent);padding:10px 0 14px 0;align-items:center}\r\n  .brandbar__left{width:160px}\r\n  .logo{max-height:70px;max-width:160px}\r\n  .brandbar__right{flex:1;text-align:right}\r\n  .brand{margin:0 0 4px 0;color:var(--ink);font-size:16px;font-weight:700}\r\n  .meta{margin:0;font-size:11px;color:#333}\r\n\r\n  /* --- Title Row --- */\r\n  .title-row{display:flex;justify-content:space-between;align-items:flex-start;margin:14px 0}\r\n  .title h1{margin:0;color:var(--ink);letter-spacing:.5px;font-size:18px}\r\n  .tag{display:inline-block;margin-top:6px;padding:2px 8px;border:1px solid var(--ink);color:var(--ink);border-radius:6px;font-weight:600;font-size:11px}\r\n\r\n  /* --- Key/Value tables --- */\r\n  .kv{border-collapse:collapse}\r\n  .kv th{background:#f7f9fc;color:#111;text-align:left;border:1px solid var(--line);padding:6px 8px;font-weight:600}\r\n  .kv td{border:1px solid var(--line);padding:6px 8px}\r\n  .kv.right{margin-left:auto}\r\n  .compact th,.compact td{padding:5px 7px}\r\n\r\n  /* --- Parties --- */\r\n  .parties{display:grid;grid-template-columns:1fr 1fr;gap:14px;margin:10px 0 6px}\r\n  .party h3{margin:0 0 6px 0;color:#284264;font-size:13px}\r\n  .muted{color:var(--muted)}\r\n\r\n  /* --- Items table --- */\r\n  .items{margin-top:8px}\r\n  .table{width:100%;border-collapse:collapse}\r\n  .table thead th{background:var(--ink);color:#fff;border:1px solid var(--ink);padding:7px 8px}\r\n  .table td{border:1px solid var(--line);padding:7px 8px;vertical-align:top}\r\n  .w-5{width:5%}.w-10{width:10%}.w-15{width:15%}.w-20{width:20%}.w-50{width:50%}\r\n  .ta-l{text-align:left}.ta-r{text-align:right}.ta-c{text-align:center}\r\n  .code{color:var(--muted);font-size:11px;margin-top:2px}\r\n\r\n  /* --- Totals --- */\r\n  .totals{display:flex;justify-content:flex-end;margin-top:10px}\r\n  .amounts{width:60%}\r\n  .kv.right th{width:55%}\r\n  .kv.right td{width:45%;text-align:right}\r\n  .grand th,.grand td{font-size:13px}\r\n  .grand td{font-weight:700}\r\n  .inwords{margin-top:6px;font-style:italic}\r\n\r\n  /* --- Notes --- */\r\n  .notes{margin-top:12px}\r\n  .notes h3{margin:0 0 6px 0;color:#284264}\r\n  .box{border:1px solid var(--line);padding:8px;background:#fff}\r\n\r\n  /* --- Payments --- */\r\n  .payments{margin-top:12px}\r\n  .payments h3{margin:0 0 6px 0;color:#284264}\r\n  .grid-2{display:grid;grid-template-columns:1fr 1fr;gap:14px}\r\n  .signatures{display:flex;gap:24px;margin-top:18px}\r\n  .sig{flex:1}\r\n  .sig .line{height:32px;border-bottom:1px solid #000}\r\n  .sig .label{font-size:11px;color:#333;margin-top:4px}\r\n\r\n  /* --- Footer --- */\r\n  .footer{margin-top:auto;text-align:center;border-top:1px solid var(--line);padding:8px 0;color:var(--muted);font-size:11px}\r\n\r\n  /* --- Print --- */\r\n  @media print{\r\n    @page{size:A4;margin:14mm 10mm 14mm 10mm}\r\n    body{font-size:12px}\r\n    .brandbar{border-bottom:4px solid var(--accent)}\r\n    .table thead th{background:var(--ink)!important;-webkit-print-color-adjust:exact;color-adjust:exact}\r\n  }\r\n</style>\r\n",
